@using Stimulsoft.Base
@using Stimulsoft.Report
@using Stimulsoft.Report.Mvc
@{ 
    Layout = null;
}
<style>
    th, td{text-align:unset}
    .stiJsViewerReportPanel table {
        direction: ltr !important;
    }
</style>

