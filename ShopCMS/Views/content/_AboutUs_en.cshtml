                        <div class="icon d-flex align-items-center justify-content-center"><span class="@Video.Icon"></span></div>
                    </div>
                </div>
                <div class="col-md-6 py-5 pl-md-5">
                    <div class="row justify-content-center mb-4 pt-md-4">
                        <div class="col-md-12 heading-section ftco-animate">
                            <span class="subheading">welcome</span>
                            <h2 class="mb-4">@Video.Title</h2>
                            <div class="d-flex about">
                                <div class="icon"><span class="@Video.Icon"></span></div>
                                <h3>@Video.Descr</h3>
                            </div>
                            <p>@Video.Abstract</p>
                            <div class="d-flex video-image align-items-center mt-md-4">
                                <a href="@("/En"+Url.Action("Index","Video",new {id=Video.Id,title=CoreLib.Infrastructure.CommonFunctions.NormalizeAddress(Video.PageAddress) }))" class="video img d-flex align-items-center justify-content-center" style="background-image:url(@Html.DisplayattachmentUrl(Video.VideoAttachment.FileName,"LG"))">
                                    <span class="fa fa-play-circle"></span>
                                </a>
                                <h4 class="ml-4"><a href="@("/En"+Url.Action("Index","Video",new {id=Video.Id,title=CoreLib.Infrastructure.CommonFunctions.NormalizeAddress(Video.PageAddress) }))">This is how we work on our clients, Watch video</a></h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>}
            }




@if (StaticTextCategories.Any(x => x.staticTextType == StaticTextType.قسمت_اول_درخواست_مشاوره))
{
