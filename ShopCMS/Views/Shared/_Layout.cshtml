@using Combres.Mvc
<!DOCTYPE html>
<html lang="en">
<head>
    @{ bool IsCart = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower() == "cart"; }
    @RenderSection("Meta", required: false)

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta -->

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/Base/Theme/css/css2.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Base/Theme/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Base/Theme/css/style.css?v=1.2">
    <style type="text/css">
        .scrollax-performance, .scrollax-performance *, .scrollax-performance *:before, .scrollax-performance *:after {
            pointer-events: none !important;
            -webkit-animation-play-state: paused !important;
            animation-play-state: paused !important;
        }
    </style>
    @if (ViewBag.langId == 1)
    {
<link rel="stylesheet" href="~/Content/Base/Theme/css/rtl.css"> } 
    @*@Styles.Render("~/bundles/SiteCss")*@

    @RenderSection("Header", required: false)

    @Html.Action("GetJsTools", "Home", new { langId = ViewBag.langId })

</head>
<body class="@(IsCart?"Cart-on":"Cart-off")">

    @if (!Request.IsAuthenticated)
    {
@Html.Partial("LoginModal")}

    @Html.Action("GetHeader", "Home", new { langId = ViewBag.langId })


    <div class="main_content">
        @RenderBody()
    </div>

    @Html.Action("GetFooter", "Home", new { langId = ViewBag.langId })

    <div id="ftco-loader" class="fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"></circle><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"></circle></svg></div>
    <script src="~/Content/Base/Theme/js/jquery.min.js"></script>
    <script src="~/Content/Base/Theme/js/plugin2.js"></script>

    <script src="~/Content/Base/Theme/js/jquery-e.js"></script>

    <script src="~/Content/Base/Theme/js/plugin.js"></script>

    <script src="~/Content/Base/Theme/js/main.js?v=1.3"></script>
    <script src="~/Content/Base/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Content/Base/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/Base/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @*@Scripts.Render("~/bundles/Sitejs")*@

    @RenderSection("scripts", required: false)
</body>



</html>
