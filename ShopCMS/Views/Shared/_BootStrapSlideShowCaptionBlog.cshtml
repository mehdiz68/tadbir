@model Domain.Slider
@using ahmadi.Infrastructure.Helper;
@{
    int? index = ViewData["Index"] as int?;
    string staticUrl = ViewData["staticUrl"] as string;
    int i = 0;
}


<div id="@("carouselExampleIndicators"+index)" class="carousel slide" data-ride="carousel">

    <ol class="carousel-indicators">
        @foreach (var ImageItem in Model.SliderImages.OrderBy(x => x.DisplaySort))
        {

            <li data-target="@("#carouselExampleIndicators"+index)" data-slide-to="@i" class="@(i==0?"active":"")"></li>
            i++;
        }
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @{ i = 0;}
        @foreach (var ImageItem in Model.SliderImages.OrderBy(x => x.DisplaySort))
        {
            <div class="@(i==0?"carousel-item active":"carousel-item")">
                <a href="@ImageItem.Link">
                    @*<img src="@Html.DisplayattachmentCookieFreeUrl(staticUrl,ImageItem.attachment.FileName,"LG",true)" alt="@ImageItem.Title" title="@ImageItem.Title" />*@
                    <img src="@Html.DisplayattachmentUrl(ImageItem.attachment.FileName,"LG",true)" class="d-block w-100" alt="@ImageItem.Title" title="@ImageItem.Title" />
                    @*<div class="carousel-caption">
                            <h4>
                                @ImageItem.Title
                            </h4>

                            <br />
                            <span href="@ImageItem.Link"  class="btn btn-info">اطلاعات بیشتر</span>
                        </div>*@
                </a>
            </div>
            i++;
        }

    </div>
    <a class="carousel-control-prev" href="#@("carouselExampleIndicators"+index)" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#@("carouselExampleIndicators"+index)" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

