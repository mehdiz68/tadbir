@model ahmadi.ViewModels.Home.Master
@using ahmadi.Infrastructure.Helper; 

@{ var FormRequestCats = ViewBag.FormRequestCat as IEnumerable<Domain.FormRequestCategory>; }

<footer class="ftco-footer">
    <div class="container mb-5 pb-4">
        <div class="row">
            <div class="col-lg col-md-6">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2 d-flex align-items-center">درباره ما</h2>
                    <p>@Model.AboutPageAbstract</p>
                    <ul class="ftco-footer-social list-unstyled mt-4">
                        @foreach (var item in Model.HeaderSocialNetworks.OrderBy(x => x.DisplaySort))
                        {
            <li><a href="@item.Link"><span class="@item.Icon"></span></a></li>}
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">لینک های مفید</h2>
                    <div class="d-flex">
                        <ul class="list-unstyled mr-md-4">
                            @foreach (var item in Model.FooterMainMenu.OrderBy(x => x.DisplayOrder).Skip(0).Take(5))
                            {
                <li><a href="@item.Link"><span class="fa fa-chevron-right mr-2"></span>@item.Title</a></li>}
                        </ul>
                        <ul class="list-unstyled ml-md-5">
                            @foreach (var item in Model.FooterMainMenu.OrderBy(x => x.DisplayOrder).Skip(5).Take(4))
                            {
                        <li><a href="@item.Link"><span class="fa fa-chevron-right mr-2"></span>@item.Title</a></li>}
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <span class="fa fa-chevron-right mr-2"></span>@Model.User.FirstName @Model.User.LastName خوش آمدید
                                </li>
                                
                            <li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <a href="javascript:document.getElementById('logoutForm').submit()" class="headUser_entriesLink js-logout" rel="nofollow"><span class="fa fa-chevron-right mr-2"></span> خروج</a>
                                }
                            </li>

                            }
                            else
                            {
                                <li >
                                    <a href="@Url.Action("Login","Account")"> <span class="fa fa-chevron-right mr-2"></span> ورود </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg col-md-6">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">خدمات</h2>
                    <ul class="list-unstyled">
                        @foreach (var item in Model.services.OrderBy(x => x.DisplaySort))
                        {
            <li><a href="@Url.Action("Index","content",new { id=item.Id,title=CoreLib.Infrastructure.CommonFunctions.NormalizeAddress(item.PageAddress)})"><span class="fa fa-chevron-right mr-2"></span>@item.Title</a></li>
}

                    </ul>
                </div>
            </div>
            <div class="col-lg col-md-6">
                <div class="ftco-footer-widget">
                    <h2 class="ftco-heading-2">ارتباط با ما</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            <li><span class="fa fa-map-marker mr-3"></span><span class="text">@Model.WebsiteAddress</span></li>
                            <li><span class="fa fa-map-marker mr-3"></span><span class="text">@Model.WebsiteAddress2</span></li>
                            <li><a href="#"><span class="fa fa-phone mr-3"></span><span class="text">@Model.WebsiteTele</span></a></li>
                            <li><a href="#"><span class="fa fa-paper-plane mr-3"></span><span class="text">@Model.Email</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-md-6 aside-stretch py-3">
                    <p class="mb-0">
                        @DateTime.Now.Year - کلیه حقوق مادی و معنوی متعلق محفوظ می باشد.
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close d-flex align-items-center justify-content-center" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="fa fa-close"></span>
                </button>
            </div>
            <div class="modal-body p-4 p-md-5">
                <div class="appointment-form ftco-animate fadeInUp">
                    <h3>درخواست مشاوره</h3>
                    <div class="">
                        <div class="form-group">
                            <input id="Ad-FirstName" type="text" class="form-control" placeholder="نام">
                        </div>
                        <div class="form-group">
                            <input id="Ad-LastName" type="text" class="form-control" placeholder="نام خانوادگی">
                        </div>
                        <div class="form-group">
                            <input id="Ad-Phone" type="text" class="form-control" placeholder="شماره تماس">
                        </div>
                    </div>
                    <div class="">
                        <div class="form-group">
                            <div class="form-field">
                                <div class="select-wrap">
                                    <div class="icon"><span class="fa fa-chevron-down"></span></div>
                                    <select id="Ad-Cat" class="form-control">
                                        @foreach (var item in FormRequestCats)
                                        {

                            <option value="@item.Id">@item.Title</option>}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="">
                        <div class="form-group">
<textarea id="Ad-Message" cols="30" rows="4" class="form-control" placeholder="پیام"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="ثبت درخواست مشاوره" class="btn btn-primary py-3 px-4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" value="1" id="mLangId"/>

<div class="loading">
    <a href="/">

        @Html.Displayattachment(Model.HeaderLogo, Model.WebSiteName, "LG", true, new { @class = "img-responsive" })

    </a>

    <div class="lds-ellipsis">
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>