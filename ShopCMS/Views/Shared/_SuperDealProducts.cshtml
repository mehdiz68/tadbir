@model IEnumerable<Domain.ViewModels.ProductItem>
@using ahmadi.Infrastructure.Helper;
@{ 
    int? w = ViewBag.w as int?;
    w = w.HasValue ? w.Value : 1280;
    int? h = ViewBag.h as int?;
    h = h.HasValue ? h.Value : 1280;
    string size = ViewBag.size as string;
    size = size != null ? size : "LG";
}
@foreach (var item2 in Model)
{
    <div class="item">
        <div class="product">
            @Html.Partial("_PItem", item2, new ViewDataDictionary { { "w", w }, { "h", h }, { "size", size } })
            @Html.Hidden("pids",item2.Id)

        </div>
    </div>
}