
@model Domain.StaticTextContent
@using CoreLib;

@using ahmadi.Infrastructure.Helper
<title>ویرایش محتوای ثابت @Model.staticTextContentType.EnumDisplayNameFor()</title>
@{
    var setting = ViewBag.setting as Domain.Setting;
}

@section Header{

    <link href="~/Areas/Admin/Content/Scripts/Component/jquery-ui.min.css" rel="stylesheet" />
}

<div class="x_panel">
    <div class="x_content">
        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Details",new {id=Model.CatId })"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>

        <h1 style="display:inline-block;font-size: 2em;" class="box-title">
            ویرایش محتوای ثابت @Model.staticTextContentType.EnumDisplayNameFor()

        </h1>
        <br /><br />
        <p class="text text-danger">@ViewBag.Error</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CatId)
                @Html.HiddenFor(model => model.Cover)
                @Html.HiddenFor(model => model.staticTextContentType)

                @Html.Displayattachment(Model.attachment.FileName, "", "SM", htmlAttributes: new { @class = "img-responsive" })


                <div class="form-group col-md-12">
                    @Html.TextAreaFor(model => model.Data, new { id = "ContentDescr", @class = "form-control", rows = "4" })

                    @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })


                </div>

                <div class="clearfix"></div>


                <div class="clearfix"></div>
                <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                    <input type="submit" value="ویرایش" class="btn btn-success" />
                </div>
                <div class="clearfix"></div>
            </div>
        }

    </div>
</div>