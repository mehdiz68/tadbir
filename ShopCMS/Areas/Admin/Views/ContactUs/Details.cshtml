@model Domain.ContactUs

<title>جزئیات تماس با ما</title>

<div class="x_panel">
    <div class="x_content">

        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index")"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>

        <h1 style="display:inline-block;font-size: 2em;" class="box-title">
            جزئیات تماس با ما
        </h1>
        <br /><br />

        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Content.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Content.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tele)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tele)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Message)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Message)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IsVisit)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IsVisit)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.InsertDate)
                </dt>

                <dd>
                    @CoreLib.Infrastructure.DateTime.DateTimeConverter.ChangeMiladiToLongShamsi(Model.InsertDate) <br /> @Model.InsertDate.ToShortTimeString()
                </dd>

            </dl>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">

            <div class="col-xs-3">
                <!-- required for floating -->
                <!-- Nav tabs -->
                <ul class="nav nav-tabs tabs-left">
                    <li class="active">
                        <a href="#sms" data-toggle="tab">ارسال SMS</a>
                    </li>
                    <li>
                        <a href="#email" data-toggle="tab">ارسال ایمیل</a>
                    </li>

                </ul>
            </div>

            <div class="col-xs-9">
                <!-- Tab panes -->
                <div class="tab-content">
                    <div class="tab-pane active" id="sms">
                        <p>پیام خود را در قالب sms به شخص تماس گیرنده ارسال کنید.</p>
                        @using (Ajax.BeginForm("SendSMS", "ContactUs", null, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnSuccess = "alert('ارسال شد');",
                            OnFailure = "alert('ارسال نشد')"
                        }, new { id = "SendSmsForm" }))
                        {
                            @Html.HiddenFor(model => model.Tele)
                            <textarea id="Message" name="Message" placeholder="متن پاسخ..." rows="8" class="form-control"></textarea><br />
                            <input type="submit" class="btn btn-primary" value="ارسال" />

                        }

                    </div>
                    <div class="tab-pane" id="email">
                        <p>پیام خود را در قالب Email به شخص تماس گیرنده ارسال کنید.</p>
                        @using (Ajax.BeginForm("SendEmail", "ContactUs", null, new AjaxOptions
                        {
                            HttpMethod = "POST",
                            OnSuccess = "alert('ارسال شد');",
                            OnFailure = "alert('ارسال نشد')"
                        }, new { id = "SendemailForm" }))
                        {
                            @Html.HiddenFor(model => model.Email)
                            <p>
                                <input type="text" placeholder="موضوع ایمیل..." name="Subject" id="Subject" class="form-control" />
                            </p>
                            <p>
                                <textarea id="BodyContent" name="BodyContent" placeholder="متن پاسخ..." rows="8" class="form-control"></textarea><br />
                            </p>
                            <input type="submit" class="btn btn-primary" value="ارسال" />

                        }
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>


        </div>
        <div class="clearfix"></div>



</div>
</div>