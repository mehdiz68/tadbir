@model Domain.Seller

<title>حذف فروشنده</title>

<div class="x_panel">
    <div class="x_content">


        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index")"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>


        <h1 style="display:inline-block;font-size: 2em;">
            <i class="flaticon-tag-filled-tool"></i> حذفِ فروشنده
        </h1>
        @if (Model.ProductPrices.Count == 0)
            {
            <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i> آیا مطمئن به حذف این رکورد هستید؟</h4>
        }
        else
        {
            <h4 style="color:red"> این فروشنده(انبار) دارای @Model.ProductPrices.Count تنوع می باشد و مجاز به حذف آن نمی باشید. </h4>
        }
        <br /><br />
        <p class="text text-danger"><strong>@ViewBag.Erorr</strong></p>
        <dl class="dl-horizontal">
            <dt>
                عنوان
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.LastName)
            </dd>
            
        </dl>
        @if (Model.ProductPrices.Count == 0)
            {
                using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-primary" />
                </div>
            }
        }

</div>
</div>