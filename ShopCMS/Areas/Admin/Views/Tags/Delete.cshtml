@model Domain.Tag

<title>حذف برچسب</title>

<div class="x_panel">
    <div class="x_content">


        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index")"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>


        <h1 style="display:inline-block;font-size: 2em;">
            <i class="flaticon-tag-filled-tool"></i> حذفِ برچسب
        </h1>
        @if (Model.Content.Count == 0)
            {
            <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i> آیا مطمئن به حذف این رکورد هستید؟</h4>
        }
        else
        {
            <h4 style="color:red"> این برچسب در @Model.Content.Count محتوا مورد استفاده قرار گرفته و مجاز به حذف آن نمی باشید. </h4>
        }
        <br /><br />
        <p class="text text-danger"><strong>@ViewBag.Erorr</strong></p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TagName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TagName)
            </dd>
            <dt>
                زبان ( وب سایت )
            </dt>

            <dd>
                @CoreLib.Infrastructure.CommonFunctions.GetLanguageName(Convert.ToInt16(Model.LanguageId))
            </dd>

        </dl>
        @if (Model.Content.Count == 0)
            {
                using (Html.BeginForm())
                {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-primary" />
                </div>
            }
        }

</div>
</div>