@model Domain.Setting
@using ahmadi.Infrastructure.Helper

<title>حذفِ  @Model.SettingName</title>


<div class="x_panel">
    <div class="x_content">
        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index")"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>

        <h1 style="display:inline-block;font-size: 2em;">
             حذفِ @Model.SettingName
        </h1>
        <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i> آیا مطمئن به حذف این رکورد هستید؟</h4>
        <br /><br />
        <p class="text text-danger"><strong>@ViewBag.Erorr</strong></p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Logo)
            </dt>

            <dd>
                @if (Model.attachment != null)
                {
                    @Html.Displayattachment(Model.attachment.FileName, Model.attachment.Title, "MD", true, htmlAttributes: new { @class = "img-responsive", width = "100" })

                }
                else
                {
                    <span>لوگو تعریف نشده است</span>
                }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.WaterMark)
            </dt>

            <dd>
                @if (Model.Waterattachment != null)
                {
                    @Html.Displayattachment(Model.Waterattachment.FileName, Model.Waterattachment.Title, "MD", true, htmlAttributes: new { @class = "img-responsive", width = "100" })

                }
                else
                {
                    <span>واترمارک تعریف نشده است</span>
                }
            </dd>

            <dt>
                زبان ( وب سایت)
            </dt>

            <dd>
                @CoreLib.Infrastructure.CommonFunctions.GetLanguageName(Model.LanguageId.Value)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.SettingName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SettingName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WebSiteName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WebSiteName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WebSiteTitle)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WebSiteTitle)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WebSiteMetaDescription)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WebSiteMetaDescription)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.WebSiteMetakeyword)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.WebSiteMetakeyword)
            </dd>



        </dl>

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="حذف" class="btn btn-danger" />
            </div>
        }
    </div>
</div>