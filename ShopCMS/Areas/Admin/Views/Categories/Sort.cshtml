@model PagedList.IPagedList<Domain.Category>
@using PagedList.Mvc;
@using ahmadi.Infrastructure.Helper

<title>مرتب سازی دسته بندی ها</title>

@section Header{

    @*View*@
    <link href="~/Areas/Admin/Content/Scripts/Component/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Stylesheets/View/Category.css" rel="stylesheet" />
}


<div class="x_panel">
    <div class="x_content">
        <div class="box box-success collapsed-box">
            <div class="box-header with-border">

                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a href="@Url.Action("Sort", "Categories")"> مرتب سازی دسته بندی ها </a>
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 text-left">
                    <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index","Categories")"> بازگشت به دسته بندی ها <span class="glyphicon glyphicon-chevron-left"></span></a></div>

                </div>
                <div class="clearfix"></div>
                <br /><br />
                <div class="table-responsive">
                    <table class="table">
                        <tr>

                            <th>
                                عنوان
                            </th>
                            <th>
                                دسته بندی اصلی
                            </th>
                            <td>فعال</td>
                            <th>
                                زبان وب سایت
                            </th>
                            <th class="text-center">
                                کاور
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="rowItem" id="@item.Id">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @{
                                        if (item.ParentCat != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.ParentCat.Title);
                                        }
                                        else
                                        {
                                            <span>----</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @CoreLib.Infrastructure.CommonFunctions.GetLanguageName(item.LanguageId.Value)
                                </td>
                                <td>
                                    @if (item.attachment != null)
                                    {
                                        @Html.Displayattachment(item.attachment.FileName, "SM", htmlAttributes: new { @class = "img-responsive", style = "display:inline-block;width:220px;height:120px" })

                                    }
                                    else
                                    {
                                        <img src="~/Content/Default/images/default-thumbnail.jpg" style="width:220px;height:120px" />
                                    }
                                </td>
                                <td>

                                    @if (ViewBag.EditPermission)
                                    {
                                        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span> ویرایش </a>
                                    }
                                    else
                                    {
                                        <span class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> <span style="text-decoration:line-through"> ویرایش </span> </span>

                                    }
                                    @if (ViewBag.DeletePermission)
                                    {
                                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><span class="glyphicon glyphicon-remove"></span> حذف </a>
                                    }
                                    else
                                    {
                                        <span class="btn btn-danger"><span style="text-decoration:line-through"> حذف </span>  </span>

                                    }
                                </td>
                            </tr>
                                        }

                    </table>
                    <p>
                        <strong style="color: #900">
                            صفحه  @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) از @Model.PageCount از میانِ @Model.TotalItemCount دسته بندی
                        </strong>
                    </p>
                    @Html.PagedListPager(Model, page => Url.Action("SortCategories", new { page }))


                </div>
            </div>
        </div>

        @section Scripts{

            @*View*@
            <script src="~/Areas/Admin/Content/Scripts/Component/jquery-ui.min.js"></script>
            <script src="~/Areas/Admin/Content/Scripts/View/SortCategory.js"></script>

        }
</div>
</div>