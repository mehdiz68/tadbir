@model Domain.Offer
@using ahmadi.Infrastructure.Helper
@using CoreLib.Infrastructure;
@using PagedList.Mvc;

<title>جزئیات تخفیف @Model.Title </title>
<style>
    .form-group.has-feedback span {
        display: inline-block;
    }

    .dropdown-menu > li > a {
        text-align: center;
    }

    .bootstrap-select.btn-group .dropdown-menu li a span.check-mark {
        display: none !important;
    }

    .ProductCategories {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .x_panel .nav.navbar-nav > li > a {
        color: #fff !important;
    }

    .navbar-right .btn-success {
        padding: 2px 8px;
        border-radius: 3px;
        margin-bottom: 10px;
    }

        .navbar-right .btn-success:hover {
            background-color: #ea7526;
        }
</style>

<div class="x_panel">
    <div class="x_content">
        @{
            var HelpModuleSection = ViewBag.HelpModule as Domain.HelpModuleSection;
            var ProductCategory = ViewBag.TreeProductCategories as IEnumerable<Domain.ProductCategory>;
            var setting = ViewBag.setting as Domain.Setting;
            int? PageSize = ViewBag.PageSize as int?;
            var ProductOffers = ViewBag.ProductOffers as PagedList.IPagedList<Domain.ProductOffer>;
            var FreeSendOffers = ViewBag.FreeSendOffers as PagedList.IPagedList<Domain.FreeSendOffer>;
            var SearchType = ViewBag.SearchType as int?;
        }

        @section Header{
            @*View*@
            <link href="~/Areas/Admin/Content/Stylesheets/View/ProductCategories.css" rel="stylesheet" />
            <link href="~/Areas/Admin/Content/Scripts/Component/jquery-ui.min.css" rel="stylesheet" />
            @*Bootstrap Select*@
            <link href="~/areas/admin/content/scripts/component/bootstrp-dropdown/bootstrap-select.min.css" rel="stylesheet" />
        }

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">

            @if (ViewBag.AddPermission)
            {

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="javascript:;" class="btn-success user-profile dropdown-toggle" data-toggle="dropdown">
                            <span style="cursor:pointer" class="glyphicon glyphicon-question-sign" data-html="true" data-toggle="tooltip" data-placement="left" title="@(HelpModuleSection!=null?Html.Raw(HelpModuleSection.Data).ToHtmlString():"راهنمایی وجود ندارد")"> </span>
                            <span class="glyphicon glyphicon-plus"></span>
                            تعریف جزئیات تخفیف جدید
                        </a>
                        <ul class="dropdown-menu dropdown-usermenu pull-right">
                            @if (Model.CodeTypeValueCode == 1 || Model.CodeTypeValueCode == 2)
                            {
                                <li>
                                    <a href="/Admin/Offers/CreateProductOffer/@Model.Id">محصول شگفت انگیز یا تخفیف و حراج</a>
                                </li>
                            }
                            else if (Model.CodeTypeValueCode == 0)
                            {
                                <li><a href="/Admin/Offers/CreateFreeSend/@Model.Id"> ارسال رایگان برای همه</a></li>
                            }
                            else if (Model.CodeTypeValueCode == 4)
                            {
                                <li><a href="/Admin/Offers/CreateFreeSend/@Model.Id"> کد تخفیف </a></li>
                            }

                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            }
            <br />
            <h1 style="display:inline-block;font-size: 2em;" class="box-title">
                <a href="@Url.Action("Detail", "Offers")"> جزئیات تخفیف @Model.Title</a>

            </h1>



        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 text-left" style="padding-left: 4px;">
            <a class="btn btn-success" href="/Admin/Offers"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a>

        </div>
        <div class="clearfix"></div>

        @if (Model.CodeTypeValueCode != 1 && Model.CodeTypeValueCode != 2)
        {
            <div class="" role="tabpanel" data-example-id="togglable-tabs">

                <div id="myTabContent2" class="tab-content">
                    <div role="tabpanel" class="tab-pane fade active in" id="tab_content11" aria-labelledby="home-tab">

                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">

                                        <th class="text-center column-title">
                                            عنوان
                                        </th>
                                        <th class="text-center column-title">
                                            مقدار کد تخفیف(در صورت وجود)
                                        </th>
                                        <th class="text-center column-title">
                                            نوع تخفیف
                                        </th>
                                        <th class="text-center column-title">
                                            ارزش تخفیف
                                        </th>
                                        <th class="text-center column-title">
                                            تاریخ درج
                                        </th>
                                        <th class="text-center column-title">
                                            تاریخ فروش
                                        </th>
                                        <th class="text-center column-title">
                                            تاریخ پایان
                                        </th>
                                        <th class="text-center column-title">
                                            وضعیت تایید
                                        </th>
                                        <th class="text-center column-title">
                                            فعال/غیرفعال
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>

                                    <tr class="ContentRow">


                                        <td class="text-center">@Model.Title</td>

                                        <td class="text-center">@Model.CodeValue</td>

                                        <td class="text-center">
                                            @if (Model.CodeTypeValueCode == 1)
                                            {
                                                <text>شگفت انگیز</text>
                                            }
                                            else if (Model.CodeTypeValueCode == 2)
                                            {
                                                <text>تخفیف و حراج</text>
                                            }
                                            else if (Model.CodeTypeValueCode == 3)
                                            {
                                                <text>ارسال رایگان</text>
                                            }
                                            else if (Model.CodeTypeValueCode == 4)
                                            {
                                                <text>کد تخفیف</text>
                                            }
                                        </td>
                                        <td class="text-center">@CoreLib.Infrastructure.DateTime.DateTimeConverter.ChangeMiladiToShamsi(Model.InsertDate) - @Model.InsertDate.ToString("HH:mm")</td>
                                        <td class="text-center">
                                            @if (Model.StartDate.HasValue)
                                            {
                                                <span>@CoreLib.Infrastructure.DateTime.DateTimeConverter.ChangeMiladiToShamsi(Model.StartDate.Value)</span> <span>-</span><span> @Model.StartDate.Value.ToString("HH:mm")</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (Model.ExpireDate.HasValue)
                                            {
                                                <span>@CoreLib.Infrastructure.DateTime.DateTimeConverter.ChangeMiladiToShamsi(Model.ExpireDate.Value)</span> <span>-</span><span> @Model.ExpireDate.Value.ToString("HH:mm")</span>
                                            }
                                        </td>

                                        <td class="text-center">
                                            @if (Model.state == true)
                                            {
                                                <text>تایید</text>
                                            }
                                            else
                                            {
                                                <text>عدم تایید</text>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (Model.IsActive == true)
                                            {
                                                <text>فعال</text>
                                            }
                                            else
                                            {
                                                <text>غیرفعال</text>
                                            }
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>




                    </div>
                </div>
            </div>
        }
        <ul id="prtabs" class="nav nav-tabs">
            @if (Model.CodeTypeValueCode == 1 || Model.CodeTypeValueCode == 2)
            {
                <li class="@(SearchType.Value==1?"active":"")"><a data-toggle="tab" href="#ProductOffer">محصول شگفت انگیز یا تخفیف و حراج</a></li>
            }
            @if (Model.CodeTypeValueCode == 0)
            {
                <li class="@(SearchType.Value==2?"active":"")"><a data-toggle="tab" href="#FreeSend">ارسال رایگان برای همه</a></li>
            }
            @if (Model.CodeTypeValueCode == 1 || Model.CodeTypeValueCode == 2 || Model.CodeTypeValueCode == 0)
            {
                if (Model.CodeTypeValueCode == 0)
                {
                    <li class="@(SearchType.Value == 3 ? "active" : "")"><a data-toggle="tab" href="#CodeGift">ارسال رایگان با کد تخفیف برای کاربران</a></li>
                }
                else
                {
                    <li class="@(SearchType.Value == 3 ? "active" : "")"><a data-toggle="tab" href="#CodeGift">کد تخفیف برای کاربران</a></li>

                }
            }
        </ul>
