                                                            </th>
                                                            <th class="text-center column-title">
                                                                <a href="@Url.Action("Detail", "Offers", new { sortOrder = ViewBag.CurrentSort != "Product_desc" ? "Product_desc" : "Product", SearchType = 1, PageSize = PageSize, NameFilter = ViewBag.NameFilter, IsActiveFilter = ViewBag.IsActiveFilter, ProductCatIdFilter = ViewBag.ProductCatIdFilter, BrandFilter = ViewBag.BrandFilter, ProductTypeFilter = ViewBag.ProductTypeFilter, ProductOfferTypeIdFilter = ViewBag.ProductOfferTypeIdFilter })">محصول</a>
                                                            </th>

                                                            <th class="text-center column-title">

                                                            </th>


                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{ int i = 1; }
                                                        @foreach (var item in ProductOffers)
                                                        {
                                                            <tr class="ContentRow">

                                                                <td class="text-center">@((((ProductOffers.PageNumber - 1) * ProductOffers.PageSize)) + i)</td>

                                                                <td class="text-center">@item.Title</td>



                                                                <td class="text-center">
                                                                    @item.Value
                                                                </td>

                                                                <td class="text-center">
                                                                    @if (item.CodeType == 1)
                                                                    {
                                                                        <text>ثابت</text>
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>درصدی</text>

                                                                    }
                                                                </td>


                                                                <td class="text-center">
                                                                    @if (item.CatId.HasValue)
                                                                    {
                                                                        <text>@item.ProductCategory.Name</text>
                                                                    }
                                                                </td>

                                                                <td class="text-center">
                                                                    @if (item.BrandId.HasValue)
                                                                    {
                                                                        <text>@item.Brand.Name</text>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    @if (item.ProductId.HasValue)
                                                                    {
                                                                        <text>@item.Product.Name</text>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <a href="/admin/Offers/DeleteProductOffer/@item.Id" title="حذف"><span class="fa fa-remove"></span></a>
                                                                    <a href="/admin/Offers/EditProductOffer/@item.Id" title="ویرایش"><span class="fa fa-edit"></span></a>

                                                                </td>
                                                            </tr>
                                                            i++;
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                            <div class="Pagging-New-Container">
                                                <strong class="Pagging-New-Info">
