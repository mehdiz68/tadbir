
@model Domain.FileType

<title>حذفِ پسوند</title>




<div class="x_panel">
    <div class="x_content">
        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index")"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>

        <h1 style="display:inline-block;font-size: 2em;" class="box-title">
            <i class="flaticon-file-outlined-blank-paper-sheet"></i> حذفِ پسوند
            </h1>
            @if (Model.attachments.Count == 0)
            {
                <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i> این پسوند، دارای @Model.attachments.Count عدد فایل می باشد . که در صورت حذف این پسوند ، همه آنها نیز حذف خواهند شد و در دسترس نخواهند بود . آیا مطمئن به حذف این رکورد هستید؟</h4>
            }
            else
            {
                <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i> این پسوند، دارای @Model.attachments.Count عدد فایل می باشد . قادر به حذف نمی باشید.</h4>

            }
            <br /><br />
            <p class="text text-danger"><strong>@ViewBag.Erorr</strong></p>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.FileTypeName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FileTypeName)
                </dd>

            </dl>
            @if (Model.attachments.Count == 0)
            {
                using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" />
                    </div>
                }
            }
</div>
</div>
