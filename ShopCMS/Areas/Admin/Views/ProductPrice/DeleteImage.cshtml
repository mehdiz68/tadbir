@model Domain.ProductImage
@using ahmadi.Infrastructure.Helper
@{
    var product = ViewBag.product as Domain.Product;
    var ProductPrice = ViewBag.ProductPrice as Domain.ProductPrice;
}
<title>حذفِ تصویر محصول</title>

<div class="x_panel">
    <div class="x_content">
        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Images",new {id = ProductPrice.Id})"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>

        <h3 class="box-title">
            <i class="flaticon-file-outlined-blank-paper-sheet"></i> حذفِ تصویر محصول
        </h3>

            <h4 style="color:red"><i class="glyphicon glyphicon-remove"></i>مطمئن به حذف هستید؟</h4>
        
        <br /><br />
        <p class="text text-danger"><strong>@ViewBag.Error</strong></p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Id)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AttachementId)
            </dt>

            <dd>
                @Html.Displayattachment(Model.Image.FileName,Model.Image.FileName, "SM", htmlAttributes: new { @class = "img-responsive", width = "220", height = "120", style = "display:inline-block;width:220px;height:120px" })


            </dd>

         

        </dl>

       
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-actions no-color">
                    <input type="submit" value="حذف" class="btn btn-danger" />
                </div>
            }
        
    </div>
</div>
