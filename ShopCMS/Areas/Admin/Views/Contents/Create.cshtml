@model Domain.Content
@using ahmadi.Infrastructure.Helper
<title> ایجاد @ViewBag.ContentTypeName جدید</title>
@{
    var HelpModuleSection = ViewBag.HelpModuleSection as Domain.HelpModuleSection;
    var setting = ViewBag.setting as Domain.Setting;
    <style>
        @@font-face {
            font-family: "Flaticon";
            src: url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.eot);
            src: url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.eot?#iefix) format("embedded-opentype"), url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.woff) format("woff"), url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.ttf) format("truetype"), url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.svg#Flaticon) format("svg");
            font-weight: normal;
            font-style: normal
        }

        @@media screen and (-webkit-min-device-pixel-ratio:0) {
            @@font-face {
                font-family: "Flaticon";
                src: url(/Content/Base/Theme/fonts/flaticon/font/Flaticon.svg#Flaticon) format("svg")
            }
        }

        [class^="flaticon-"]:before, [class*=" flaticon-"]:before, [class^="flaticon-"]:after, [class*=" flaticon-"]:after {
            font-family: Flaticon;
            font-style: normal;
            font-weight: normal;
            font-variant: normal;
            text-transform: none;
            line-height: 1;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale
        }

        .flaticon-hammer:before {
            content: "\f100"
        }

        .flaticon-worker:before {
            content: "\f101"
        }

        .flaticon-engineer-1:before {
            content: "\f102"
        }

        .flaticon-engineer:before {
            content: "\f103"
        }

        .flaticon-worker-1:before {
            content: "\f104"
        }

        .flaticon-architect:before {
            content: "\f105"
        }

        .flaticon-crane:before {
            content: "\f106"
        }

        .tree li {
            padding: 6px 5px 0px 5px;
        }

            .tree li a {
                padding: 4px;
                font-weight: normal;
                font-size: 12px;
            }
    </style>
}
@section Header{

    <link href="~/Areas/Admin/Content/Scripts/Component/jquery-ui.min.css" rel="stylesheet" />
    <style>
        .form-group > .mce-panel {
            width: 100% !important;
        }

        .NewFieldset {
            display: none;
            border-top: 0;
        }

        hr {
            margin: 0;
            border: 1px solid #ccc;
        }

        .Newlegend {
            cursor: pointer;
            min-width: 150px;
        }

        .glyphicon-remove {
            color: red;
            cursor: pointer;
        }

        .fixTopLeft {
            position: fixed;
            background-color: #ea7526;
            top: 0;
            z-index: 99999;
            left: 45%;
            color: #fff;
            padding: 0px 0 6px 0;
        }

        #options .form-group {
            margin: 30px 0;
        }
    </style>
}

<div class="x_panel">
    <div class="x_content">

        <div class="text-left"><a class="btn btn-success" href="@Url.Action("Index",new { ContentTypeId=Request.QueryString["ContentTypeId"]})"> بازگشت به لیست <span class="glyphicon glyphicon-chevron-left"></span></a></div>
        <span style="cursor:pointer" data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection!=null?Html.Raw(HelpModuleSection.Data).ToHtmlString():"راهنمایی وجود ندارد")" title="راهنمای این صفحه"></span>

        <h1 style="display:inline-block;font-size: 2em;" class="box-title">
            ایجاد @ViewBag.ContentTypeName جدید

        </h1>
        <br /><br />
        <p class="text text-danger">@ViewBag.Error</p>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("ContentTypeId", Request.QueryString["ContentTypeId"])

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @{
                        CoreLib.ViewModel.Xml.XMLReader readXml = new CoreLib.ViewModel.Xml.XMLReader(setting.StaticContentDomain);
                        var languages = readXml.ListOfXLanguage();
                    }
                    @if (languages.Count == 1)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <p>
                                <span class="ContentTitle"></span> کاراکتر باقی مانده.
                                <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "عنوان").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "عنوان").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                                <span>عنوان</span>
                            </p>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { id = "ContentTitle", @class = "form-control", placeholder = "عنوانِ " + ViewBag.ContentTypeName } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <p>
                                <span class="ContentPageAddress"></span> کاراکتر باقی مانده.
                                <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "آدرس صفحه").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "آدرس صفحه").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                                <span>آدرس صفحه</span>
                            </p>
                            @Html.EditorFor(model => model.PageAddress, new { htmlAttributes = new { id = "ContentPageAddress", @class = "form-control", placeholder = "آدرس صفحه " + ViewBag.ContentTypeName } })
                            @Html.ValidationMessageFor(model => model.PageAddress, "", new { @class = "text-danger" })

                        </div>


                        @Html.Hidden("LanguageId", languages.First().Id)
                    }
                    else
                    {
                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            <p>
                                <span class="ContentTitle"></span> کاراکتر باقی مانده.
                                <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "عنوان").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "عنوان").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                                <span>عنوان</span>

                            </p>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { id = "ContentTitle", @class = "form-control", placeholder = "عنوانِ " + ViewBag.ContentTypeName } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

                        </div>


                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <p>
                                <span class="ContentPageAddress"></span> کاراکتر باقی مانده.
                                <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "آدرس صفحه").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "آدرس صفحه").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                                <span>آدرس صفحه</span>
                            </p>
                            @Html.EditorFor(model => model.PageAddress, new { htmlAttributes = new { id = "ContentPageAddress", @class = "form-control", placeholder = "آدرس صفحه " + ViewBag.ContentTypeName } })
                            @Html.ValidationMessageFor(model => model.PageAddress, "", new { @class = "text-danger" })

                        </div>

                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                            @Html.LabelFor(model => model.LanguageId, "زبان ( وب سایت )", htmlAttributes: new { Style = "text-align:right;    padding-right: 0;", @class = "control-label col-md-3" })

                            @Html.DropDownList("LanguageId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LanguageId, "", new { @class = "text-danger" })

                        </div>
                    }

                    <div class="clearfix"></div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <p>
                            <span class="ContentDescr"></span> کاراکتر باقی مانده.
                            <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "توضیحات متای گوگل").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "توضیحات متای گوگل").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                            <span>توضیحات متای گوگل</span>

                        </p>
                        @Html.TextAreaFor(model => model.Descr, htmlAttributes: new { id = "ContentDescr", @class = "form-control", rows = "4", placeholder = "توضیحات متای گوگل" })
                        @Html.ValidationMessageFor(model => model.Descr, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <p>
                            <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "چکیده").Any()? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x=>x.Name== "چکیده").First().Data).ToHtmlString():Html.Raw("").ToHtmlString())"></span>
                            <span>چکیده</span>

                        </p>
