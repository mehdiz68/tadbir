                                <legend class="Newlegend">
                                    <span data-html="true" data-toggle="tooltip" data-placement="left" class="glyphicon glyphicon-question-sign" title="@(HelpModuleSection.HelpModuleSectionFields.Where(x => x.Name == "منبع").Any() ? Html.Raw(HelpModuleSection.HelpModuleSectionFields.Where(x => x.Name == "منبع").First().Data).ToHtmlString() : Html.Raw("").ToHtmlString())"></span>

                                    افزودن منبع به @ViewBag.ContentTypeName

                                </legend>
                                <hr />
                                <div class="NewFieldset">
                                    <div class="text-left"><span class="glyphicon glyphicon-remove"></span></div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <p><input type="text" class="form-control" id="SourceName" placeholder="منبع" /></p>
